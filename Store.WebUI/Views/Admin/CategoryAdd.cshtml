@model CategoryDTO
@{
    ViewData["Title"] = "CategoryAdd";
}

@section pageHeader{
    <h2 class="page-title">Category Add</h2>
}


<form class="form-group d-inline-block col-6 border" asp-action="CategoryAdd" method="post">
    <div class="card-body col-12">

        <div class="form-group">
            <label asp-for="CategoryName">Kategori Adı</label>
            <input asp-for="CategoryName" class="form-control">
            <label asp-for="CategoryName">Açıklama</label>
            <input asp-for="Description" class="form-control">
        </div>
        <br />
        <button type="submit" class="btn btn-outline-success">Kategori Ekle</button>
    </div>

</form>