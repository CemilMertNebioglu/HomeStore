@model IEnumerable<ContractDTO>
@{
    ViewData["Title"] = "ContractList";
}

@section pageHeader{
    <h2 class="page-title">Conract List</h2>
}

<div class="portlet box blue">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-cogs"></i>Contracts
        </div>
        <div class="tools">
            <a href="javascript:;" class="collapse"> </a>
            <a href="#portlet-config" data-toggle="modal" class="config"> </a>
            <a href="javascript:;" class="reload"> </a>
            <a href="javascript:;" class="remove"> </a>
        </div>
    </div>
    <div class="portlet-body">
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th> # </th>
                        <th> Title</th>
                        <th> Confirmed Supplier</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (ContractDTO contract in Model)
                    {
                        <tr>
                            <td>@contract.Id </td>
                            <td>@contract.Title</td>
                            <td>@contract.Suppliers</td>
                            <td>
                                <a class="btn btn-success btn-sm" asp-action="ContractEdit" asp-route-id="@contract.Id">Edit</a>
                                <a class="btn btn-danger btn-sm" asp-action="ContractDelete" asp-route-id="@contract.Id">Delete</a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
