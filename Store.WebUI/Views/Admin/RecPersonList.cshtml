@model IEnumerable<RecPersonDTO>
@{
    ViewData["Title"] = "RecPersonList";
}

<h2>RecPersonList</h2>


@section pageHeader{
    <h2 class="page-title">RecPerson List</h2>
}

<div class="portlet box blue">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-cogs"></i>Recommended People
        </div>
        <div class="tools">
            <a href="javascript:;" class="collapse"> </a>
            <a href="#portlet-config" data-toggle="modal" class="config"> </a>
            <a href="javascript:;" class="reload"> </a>
            <a href="javascript:;" class="remove"> </a>
        </div>
    </div>
    <div class="portlet-body">
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th> # </th>
                        <th> Cv</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (RecPersonDTO rec in Model)
                    {
                        <tr>
                            <td>@rec.Id </td>
                            <td>@rec.Cv</td>
                            <td>
                                <a class="btn btn-danger btn-sm" asp-action="RecPersonDelete" asp-route-id="@rec.Id">Delete</a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
