@model IEnumerable<ProductDTO>
@{
    ViewData["Title"] = "ProductList";
}

@section pageHeader{
    <h2 class="page-title">Product List</h2>
}

<div class="portlet box blue">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-cogs"></i>PRODUCTS
        </div>
        <div class="tools">
            <a href="javascript:;" class="collapse"> </a>
            <a href="#portlet-config" data-toggle="modal" class="config"> </a>
            <a href="javascript:;" class="reload"> </a>
            <a href="javascript:;" class="remove"> </a>
        </div>
    </div>
    <div class="portlet-body">
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th> # </th>
                        <th> ProductName</th>
                        <th> UnitPrice</th>
                        <th> UnitsInStock</th>
                        <th> SalesPoint</th>
                        <th> CategoryName</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (ProductDTO product in Model)
                    {
                    <tr>
                        <td>@product.Id </td>
                        <td>@product.ProductName</td>
                        <td>@product.UnitPrice</td>
                        <td>@product.UnitsInStock</td>
                        <td>@product.SalesPoint</td>
                        <td>@product.CategoryDTO.CategoryName</td>
                        <td>
                            <a class="btn btn-success btn-sm" asp-action="CategoryEdit" asp-route-id="@product.Id">Edit</a>
                            <a class="btn btn-danger btn-sm" asp-action="CategoryDelete" asp-route-id="@product.Id">Delete</a>
                        </td>
                    </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>